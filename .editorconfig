root = true

[*.{kt,kts}]
# Use ktlint official code style as a base
ktlint_code_style = ktlint_official
indent_size = 4
indent_style = space
insert_final_newline = true

# Allow long lines for Compose HTML strings, etc.
max_line_length = off

# Disable rules that conflict with Compose/Kobweb conventions or are too noisy for this codebase right now.
# NOTE: KtLint 1.x no longer supports "ktlint_disabled_rules". Disable rules individually using
#       "ktlint_<ruleset>_<rule-id> = disabled". Re-enable gradually as the codebase stabilizes.
ktlint_standard_function-naming = disabled
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_trailing-comma-on-declaration-site = disabled
ktlint_standard_argument-list-wrapping = disabled
ktlint_standard_multiline-expression-wrapping = disabled
ktlint_standard_function-signature = disabled
ktlint_standard_chain-method-continuation = disabled
ktlint_standard_if-else-wrapping = disabled
ktlint_standard_wrapping = disabled
ktlint_standard_function-literal = disabled
ktlint_standard_class-signature = disabled
ktlint_standard_paren-spacing = disabled
ktlint_standard_statement-wrapping = disabled
ktlint_standard_binary-expression-wrapping = disabled
ktlint_standard_import-ordering = disabled
ktlint_standard_final-newline = disabled
ktlint_standard_no-blank-line-before-rbrace = disabled
ktlint_standard_no-blank-line-in-list = disabled
ktlint_standard_no-consecutive-blank-lines = disabled
ktlint_standard_comment-spacing = disabled
ktlint_standard_parameter-list-spacing = disabled
ktlint_standard_no-multi-spaces = disabled
ktlint_standard_value-parameter-comment = disabled
ktlint_standard_function-expression-body = disabled

[*.md]
insert_final_newline = true
